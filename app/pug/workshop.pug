extends includes/layout.pug
include partials/mixin-page.pug
prepend head
  - var title = $i18n.nav.workshop
block content
  -var locale =  $localeName;
  .m-5
    h2.mb-3 !{$i18n.pages.workshop.content.title.toUpperCase()}
    h3.mb-5 !{$i18n.pages.workshop.content.subtitle}
    p
      img(src="../images/calendar.jpg").icon.mr-3 
      span !{$i18n.pages.workshop.content.date}
    p 
      img(src="../images/location.jpg").icon.mr-3 
      span !{$i18n.pages.workshop.content.location}
      span.subtext.ml-2 !{$i18n.pages.workshop.content['location-extra']}
    form(action="")#workshopForm.mt-5
      .row
        .col-md-6
          h2 !{$i18n.pages.workshop.content.personal.title.toUpperCase()}
          .row
            .col-12
              label(for="surname") !{$i18n.pages.workshop.content.personal.surname} 
            .col-12
              input#surname(type="text", name="surname")
          .row          
            .col-12
              label(for="name") !{$i18n.pages.workshop.content.personal.name} 
            .col-12
              input#name(type="text", name="name")
          .row          
            .col-12
              label(for="company") !{$i18n.pages.workshop.content.personal.company} 
            .col-12
              input#company(type="text", name="company")
          .row          
            .col-12
              label(for="function") !{$i18n.pages.workshop.content.personal.function} 
            .col-12
              input#function(type="text", name="function")
          .row          
            .col-12
              label(for="email") !{$i18n.pages.workshop.content.personal.email} 
            .col-12
              input#email(type="text", name="email")
          .row          
            .col-12
              label(for="phone") !{$i18n.pages.workshop.content.personal.phone} 
            .col-12
              input#phone(type="text", name="phone")
          .row          
            .col-12
              label(for="mobile") !{$i18n.pages.workshop.content.personal.mobile} 
            .col-12
              input#mobile(type="text", name="mobile")
        .col-md-6
          h2 !{$i18n.pages.workshop.content.billing.title.toUpperCase()}
          .row
            .col-12
              label(for="number") !{$i18n.pages.workshop.content.billing.number} 
            .col-12
              input#number(type="text", name="number")
          .row          
            .col-12
              label(for="company") !{$i18n.pages.workshop.content.billing.company} 
            .col-12
              input#company(type="text", name="company")
          .row          
            .col-12
              label(for="street") !{$i18n.pages.workshop.content.billing.street} 
            .col-12
              input#street(type="text", name="street")
          .row          
            .col-12
              label(for="zip") !{$i18n.pages.workshop.content.billing.zip} 
            .col-12
              input#zip(type="text", name="zip")
          .row          
            .col-12
              label(for="city") !{$i18n.pages.workshop.content.billing.city} 
            .col-12
              input#city(type="text", name="city")
          .row          
            .col-12
              label(for="btw") !{$i18n.pages.workshop.content.billing.btw} 
            .col-12
              input#btw(type="text", name="btw")
          .row          
            .col-4
              input#btwGuilty(type="checkbox", name="btwGuilty").form-check-input
            .col-8
              label(for="btwGuilty") !{$i18n.pages.workshop.content.billing.btwGuilty} 
      
    br
    hr